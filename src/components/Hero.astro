---
const { title, subtitle, ctaLabel, ctaUrl } = Astro.props;
---
<section class="mx-auto max-w-7xl px-6 py-16">
  <h1 class="mt-8 text-4xl font-semibold tracking-tight">{title}</h1>
  <p class="mt-4 max-w-2xl text-gray-600">{subtitle}</p>
  {ctaLabel && (
    <a href={ctaUrl} class="mt-8 inline-block rounded-md bg-gray-900 px-6 py-3 text-white hover:bg-black">
      {ctaLabel}
    </a>
  )}
</section>
